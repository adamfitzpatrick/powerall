{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": false,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@components": [ "./src/components" ],
            "@context": [ "./src/context" ],
            "@models": [ "./models" ],
            "@services": [ "./src/services" ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "es6",
            "ES2018.Promise"
        ],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    }
}